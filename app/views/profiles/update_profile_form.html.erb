<br>
<div class="card col-6 offset-3">
  <h3 class="card-header bg-dark text-white mx-1">Update Your Profile!</h3>
  <div class="card-body">
    <%= form_with url: update_profile_path do |f| %>
      <div class="form-group row">
        <%= f.label :"Select picture", class: "col-md-2 col-form-label" %>
        <div class="col-md-6">
            <%= f.file_field :profile_image, class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="form-group row">
        <%= f.label :"First Name", class: "col-md-2 col-form-label" %>
        <div class="col-md-6">
          <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
        </div>
      </div>
      <br>
      <div class="form-group row">
        <%= f.label :"Last Name", class: "col-md-2 col-form-label" %>
        <div class="col-md-6">
          <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
        </div>
      </div>
      <br>
      <div class="form-group row">
        <%= f.label :Age, class: "col-md-2 col-form-label" %>
        <div class="col-md-6">
          <%= f.text_field :age, class: "form-control", placeholder: "Age" %>
        </div>
      </div>
      <br>
      <div class="form-group row">
        <div class="col">
          <%= f.submit :Update, class: "btn btn-primary"%>
        </div>
      </div>
    <% end %> 
</div>
